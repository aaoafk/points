<turbo-frame id="name_<%= name.id %>" data-points-target="card" data-name-id="<%= name.id %>" class="border-4 border-game-purple p-6 rounded-lg shadow-lg bg-black bg-opacity-70 transform transition duration-500 hover:scale-105 hover:rotate-1">
  <div class="mb-4 text-2xl font-bold text-game-blue font-bungee">
    <span><%= name.first_name %> <%= name.last_name %></span>
  </div>
  <div class="mb-6 text-xl font-honk">
    <span class="font-lg font-bold text-game-green">Points: </span>
    <span data-points-target="value" class="text-game-yellow text-3xl"><%= name.points %></span>
  </div>
  <div class="flex justify-center space-x-8">
    <button data-action="click->points#increment" class="bg-game-green hover:bg-green-600 text-black font-bold py-4 px-8 rounded-full text-4xl transition duration-300 font-honk transform hover:scale-110 shadow-lg">
      +
    </button>
    <button data-action="click->points#decrement" class="bg-game-red hover:bg-red-600 text-black font-bold py-4 px-8 rounded-full text-4xl transition duration-300 font-honk transform hover:scale-110 shadow-lg">
      -
    </button>
  </div>
</turbo-frame>
